.background_view {
    width: 100vw;
    padding: 10rpx 0rpx;
    padding-left: 20rpx;
    position: relative;
    border-bottom: 1rpx solid rgb(240, 240, 240);
}

.head_view {
    display: flex;
    flex-direction: row;
    position: relative;
    margin-bottom: 20rpx;
    width: 730rpx;
}

.head_view .userAvatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-right: 15rpx;
}

.text_view .userName {
    margin-top: 5rpx;
    font-size: 28rpx;
    font-weight: 700;
}

.text_view .publish_time {
    font-size: 24rpx;
    color: rgb(166, 176, 201);
    position: absolute;
    bottom: 0;
}

.level {
    color: white;
    font-size: 28rpx;
    margin-top: 5rpx;
    margin-left: 20rpx;
    font-weight: 700;
    font-style: italic;
    text-shadow: 0 0 5rpx rgb(255, 196, 0), 0 0 10rpx rgb(255, 196, 0), 0 0 15rpx rgb(255, 196, 0);
}

.icon-gengduo1 {
    position: absolute;
    right: 20rpx;
    top: 0rpx;
    font-size: 36rpx;
}

.text_content {
    font-size: 27rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    word-break: break-all;
    margin-right: 20rpx;
}

/* 1张图片的样式 */
.image_content1 {
    height: 380rpx;
}

/* 2~4张图片的样式 */
.image_content2 {
    width: 357.5rpx;
    height: 300rpx;
    margin-right: 5rpx;
}

/* 5~9张图片的样式 */
.image_content3 {
    width: 236.7rpx;
    height: 210rpx;
    margin-right: 5rpx;
}

.comment_number {
    margin-left: 20rpx;
    margin-top: 20rpx;
    font-size: 24rpx;
    color: rgb(138, 138, 138);
}

.show_comment image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 12.5%;
}

.show_comment .comment_userInfo_nickName,
.reply_userInfo_nickName {
    font-size: 24rpx;
    font-weight: bold;
}

.comment_userInfo_level,
.reply_userInfo_level {
    margin-left: 10rpx;
    font-size: 24rpx;
    font-weight: bold;
    color: rgb(255, 196, 0);
}

.comment_content,
.reply_content {
    font-size: 27rpx;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 70rpx;
    margin-right: 10rpx;
}

.comment_time,
.reply_time {
    font-size: 24rpx;
    color: rgb(200, 200, 200);
}

.comment_userInfo,
.reply_userInfo,
.replyed_userInfo {
    display: flex;
    align-items: center;
}

.right_box {
    margin-left: 10rpx;
}

.name_box {
    display: flex;
}

.main_comment {
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.replys_userInfo {
    display: flex;
    align-items: center;
}

.replys_userInfo .reply_label {
    margin: 0 10rpx;
    font-size: 24rpx;
    color: rgb(255, 145, 145);
}

.reply {
    margin-left: 90rpx;
}

.no_comment {
    margin-top: 80rpx;
    font-size: 24rpx;
    text-align: center;
    color: rgb(138, 138, 138);
}

.bottom_line {
    width: 85vw;
    height: 1rpx;
    background-color: rgb(240, 240, 240);
    margin-left: 90rpx;
}

.place_block {
    width: 100vw;
    height: 90rpx;
}

.bottom_view {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 90rpx;
    border-top: 1rpx solid rgb(240, 240, 240);
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 27rpx;
    padding-bottom: calc(env(safe-area-inset-bottom) / 2);
    background-color: white;
}

.input_view {
    display: flex;
    width: 45%;
    height: 70%;
    /* border-radius: 50rpx; */
    background-color: rgb(240, 240, 240);
    align-items: center;
    /* font-size: 28rpx; */
    margin-left: 20rpx;
}

.input_view text {
    font-size: 27rpx;
    margin-left: 20rpx;
}

.input_view view {
    margin-left: 10rpx;
    color: rgb(170, 153, 141);
}

.box_view {
    display: flex;
    margin-left: 80rpx;
    align-items: center;
    position: absolute;
    right: 20rpx;
}

.box_view>view {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.box_view .iconfont {
    font-size: 44rpx;
}

.box_view text {
    font-size: 24rpx;
    margin-left: 5rpx;
}

.masklayer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
}

.sent_view {
    position: fixed;
    width: 100vw;
    display: flex;
    background-color: white;
    border-top: 1rpx solid rgb(240, 240, 240);
    z-index: 2000;
    align-items: center;
    padding: 10rpx 0;
}

.commentInput_view {
    background-color: rgb(240, 240, 240);
    width: 78%;
    margin-left: 20rpx;
    font-size: 27rpx;
    border-radius: 5rpx;
    padding: 14rpx 10rpx;
}

.commentInput {
    width: 100%;
}

.sentComment {
    font-size: 27rpx;
    background-color: rgb(255, 145, 145);
    text-align: center;
    height: 65rpx;
    width: 100rpx;
    margin-left: 15rpx;
    color: white;
    line-height: 65rpx;
    border-radius: 5rpx;
}

.masklayer2 {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
    background-color: black;
    opacity: 0;
}

.pop_box {
    position: fixed;
    bottom: -180rpx;
    width: 94vw;
    height: 180rpx;
    left: 3vw;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    z-index: 1000;
    background-color: white;
    border-radius: 10rpx;
    font-size: 27rpx;
}

.pop_box view {
    width: 100%;
    height: 50%;
    line-height: 90rpx;
    text-align: center;
}

.pop_box .delete {
    border-bottom: 1rpx solid rgb(240, 240, 240);
}

.report_note {
    position: fixed;
    bottom: -730rpx;
    left: 0;
    height: 730rpx;
    width: 100vw;
    background-color: white;
    border-radius: 10rpx 10rpx 0 0;
    z-index: 2000;
    display: flex;
    flex-direction: column;
}

.report_text {
    display: flex;
    height: 100rpx;
    align-items: center;
    font-size: 28rpx;
    width: 100vw;
    justify-content: center;
    border-bottom: 1rpx solid rgb(240, 240, 240);
}

.report_text view {
    font-weight: bold;
}

.report_text text {
    position: absolute;
    right: 30rpx;
    font-size: 27rpx;
    color: rgb(138, 138, 138);
}

.report_detail {
    position: relative;
    left: 3vw;
    width: 97%;
    height: 90rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid rgb(235, 235, 235);
    font-size: 27rpx;
}

.report_detail text {
    position: absolute;
    right: 3vw;
    font-size: 27rpx;
}

.click_view {
    background-color: rgb(230, 230, 230);
}