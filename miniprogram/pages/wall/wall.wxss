page{
    background-color: rgb(240, 240, 240);
}

.masklayer {
    width: 100vw;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
}

.menu {
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
    background-color: #86BC9C;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
}

.menu text {
    color: white;
}

.menu_item {
    opacity: 0;
    scale: 0.95;
}

.item1 {
    background: radial-gradient(rgb(233, 225, 225), rgb(253, 173, 173));
}

.item2 {
    background: radial-gradient(rgb(233, 225, 225), #6fba4d);
}

.item3 {
    background: radial-gradient(rgb(233, 225, 225), #505d8a);
}

.item4 {
    background: radial-gradient(rgb(233, 225, 225), #a18c4c);
}

.images_swiper{
    width: 670rpx;
    box-shadow: 6rpx 6rpx 10rpx 6rpx rgba(0,0,0,0.3);
    border-radius: 10rpx;
    margin: 20rpx auto;
}

.images_swiper swiper {
    width: 100%;
    height: 30vh;
    border-radius: 10rpx;
    overflow: hidden;
}

.images_swiper image {
    width: 100%;
    height: 100%;
}

.navigaotrs{
    width: 670rpx;
    margin: 40rpx auto;
    font-size: 27rpx;
}

.top_view{
    width: 100%;
