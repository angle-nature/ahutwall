.out_box {
    padding: 10rpx 20rpx;
    font-size: 27rpx;
    background-color: white;
}

.images_swiper swiper {
    width: 100%;
    height: 45vh;
}

.images_swiper image {
    width: 100%;
    height: 40vh;
}

.head_view {
    display: flex;
    flex-direction: row;
    position: relative;
    margin: 20rpx 0;
}

.head_view .userAvatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-right: 15rpx;
}

.text_view .userName {
    margin-top: 5rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.text_view .publish_time {
    font-size: 24rpx;
    color: rgb(200, 200, 200);
    position: absolute;
    bottom: 0rpx;
}

.level {
    color: white;
    font-size: 28rpx;
    margin-top: 5rpx;
    margin-left: 20rpx;
    font-weight: 700;
    font-style: italic;
    text-shadow: 0 0 5rpx rgb(255, 196, 0), 0 0 10rpx rgb(255, 196, 0), 0 0 15rpx rgb(255, 196, 0);
}

.goods_name {
    font-weight: bold;
    margin: 10rpx 0;
    color: #505d8a;
}

.lost_info {
    margin: 10rpx 0;
    color: #505d8a;
}

.lost_info text {
    color: rgb(138, 138, 138);
    word-break: break-all;
}

.detail {
    word-break: break-all;
}

.bottom_box {
    width: 100vw;
    height: 100rpx;
    background-color: white;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    border-top: 1rpx solid rgb(240, 240, 240);
}

.iconfont {
    margin-left: 20rpx;
    font-size: 44rpx;
}

.collect_number {
    margin-left: 10rpx;
    font-size: 27;
}

.want {
    position: absolute;
    right: 20rpx;
    height: 70rpx;
    width: 200rpx;
    border-radius: 35rpx;
    background-color: #505d8a;
    text-align: center;
    line-height: 70rpx;
    color: white;
    font-size: 27rpx;
}

.masklayer2 {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
    background-color: black;
    opacity: 0;
}

.report_note {
    position: fixed;
    bottom: -730rpx;
    left: 0;
    height: 730rpx;
    width: 100vw;
    background-color: white;
    border-radius: 10rpx 10rpx 0 0;
    z-index: 2000;
    display: flex;
    flex-direction: column;
}

.report_text {
    display: flex;
    height: 100rpx;
    align-items: center;
    font-size: 28rpx;
    width: 100vw;
    justify-content: center;
    border-bottom: 1rpx solid rgb(240, 240, 240);
}

.report_text view {
    font-weight: bold;
}

.report_text text {
    position: absolute;
    right: 30rpx;
    font-size: 27rpx;
    color: rgb(138, 138, 138);
}

.report_detail {
    position: relative;
    left: 3vw;
    width: 97%;
    height: 90rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid rgb(235, 235, 235);
    font-size: 27rpx;
}

.report_detail text {
    position: absolute;
    right: 3vw;
    font-size: 27rpx;
}

.icon-gengduo1 {
    position: absolute;
    right: 20rpx;
    top: 0rpx;
    font-size: 36rpx;
}