page {
    background-color: rgb(240, 240, 240);
}

.goods_content {
    background-color: rgb(240, 240, 240);
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    /* justify-content: flex-start; */
    padding: 0rpx 8rpx;
    padding-top: 20rpx;
}

.goods_item {
    width: 47vw;
    margin-bottom: 20rpx;
    background-color: white;
    border-radius: 10rpx;
    position: relative;
    margin-left: 10rpx;
}

.goods_item .image_box {
    width: 100%;
    display: flex;
    justify-content: center;
}

.goods_item image {
    width: 100%;
    height: 380rpx;
    border-radius: 10rpx 10rpx 0rpx 0rpx;
}

.goods_name {
    margin-top: 10rpx;
    margin-left: 10rpx;
    font-size: 27rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.goods_price {
    color: red;
    font-size: 28rpx;
    margin-left: 10rpx;
    margin-top: 5rpx;
    display: flex;
    align-items: baseline;
    font-weight: bold;
    /* font-style: italic; */
}

.goods_price text {
    font-size: 24rpx;
}

.goods_counteroffer {
    font-size: 24rpx;
    color: rgb(200, 200, 200);
    position: absolute;
    right: 10rpx;
    bottom: 110rpx;
}

.price_label {
    font-size: 24rpx;
    color: rgb(120, 120, 120);
}

.head_view {
    display: flex;
    flex-direction: row;
    position: relative;
    padding: 10rpx 10rpx;
    border-top: 1rpx solid rgb(240, 240, 240);
}

.head_view .userAvatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-right: 15rpx;
}

.text_view .userName {
    margin-top: 5rpx;
    font-size: 28rpx;
    font-weight: bold;
    max-width: 140rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    word-break: break-all;
}

.text_view .publish_time {
    font-size: 24rpx;
    color: rgb(200, 200, 200);
    position: absolute;
    bottom: 10rpx;
}

.level {
    color: white;
    font-size: 28rpx;
    margin-top: 5rpx;
    margin-left: 20rpx;
    font-weight: 700;
    font-style: italic;
    text-shadow: 0 0 5rpx rgb(255, 196, 0), 0 0 10rpx rgb(255, 196, 0), 0 0 15rpx rgb(255, 196, 0);
}

.toBottom_tip {
    background-color: rgb(240, 240, 240);
}