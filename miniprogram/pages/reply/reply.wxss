/* pages/privateletter/privateletter.wxss */
page {
    background-color: rgb(240, 240, 240);
}

.notice-list {
    width: 100vw;
    background-color: white;
    border-bottom: 1rpx solid rgb(240, 240, 240);
}

.user {
    display: flex;
    padding: 20rpx 20rpx;
}

.user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12.5%;
    overflow: hidden;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-content: space-between;
}

.infonotic {
    margin-left: 20rpx;
    width: fit-content;
    height: 30rpx;
    background-color: #F2F2F2;
    border-radius: 15rpx;
    padding: 5rpx 15rpx;
    display: flex;
    align-items: center;
    font-size: 22rpx;
    margin-top: 5rpx;
}

.infonotic .iconfont {
    margin-right: 5rpx;
}

.top_view {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    /* margin-bottom: 15rpx; */
    position: relative;
    bottom: 8rpx;
}

.username {
    font-weight: bold;
    font-size: 28rpx;
    margin-right: 15rpx;
}

.notictime {
    font-size: 24rpx;
    color: rgb(138, 138, 138);
}

.reply_content {
    margin-left: 20rpx;
    font-size: 27rpx;
    margin-top: 20rpx;
    word-break: break-all;
}