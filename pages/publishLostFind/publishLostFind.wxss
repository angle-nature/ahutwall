.iconfont {
    font-size: 40rpx;
    color: #505d8a;
}

.input_box {
    width: 700rpx;
    margin-top: 20rpx;
    margin-left: 25rpx;
    border-bottom: 1rpx solid 	#ffffff;
    padding-bottom: 20rpx;
}

.input_box textarea {
    font-size: 27rpx;
    width: 100%;
    height: 200rpx;
}

.uploadImage {
    width: 150rpx;
    height: 210rpx;
    background-color: rgb(240, 240, 240);
    border-radius: 5rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 30rpx;
}

.icon-jia {
    color: rgb(120, 120, 120);
    font-size: 24rpx;
}

.images_box {
    width: 100%;
    height: 250rpx;
    display: flex;
    flex-direction: row;
    /* flex-wrap: wrap; */
    margin: 20rpx 0;
}

.image_view {
    width: 210rpx;
    height: 220rpx;
    margin-bottom: 30rpx;
    display:inline-block;
    margin-top: 30rpx;
    margin-right: 20rpx;
    position: relative;
}

.image_view image {
    height: 100%;
    width: 100%;
}

.icon-chacha{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    top: -18rpx;
    right: -32rpx;
    color: rgb(138, 138, 138);
}

.price_view {
    width: 700rpx;
    height: 80rpx;
    margin-left: 25rpx;
    display: flex;
    /* margin-top: 10rpx; */
    align-items: center;
    position: relative;
    border-bottom: 1rpx solid rgb(240, 240, 240);
}

.price_label {
    font-size: 27rpx;
    position: absolute;
    left: 50rpx;
}

.price_view input {
    position: absolute;
    right: 20rpx;
    text-align: right;
    font-size: 27rpx;
    width: 400rpx;
}

.buttons .save {
    background-color: rgb(60, 121, 179);
}

.buttons .publish {
    background-color: rgb(44, 71, 158);
}