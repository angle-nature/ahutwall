page {
    background: linear-gradient(to bottom, rgb(255, 255, 255), rgb(255, 235, 235));
}

.textarea_view {
    position: relative;
    width: 670rpx;
    height: 50vh;
    margin: 20rpx 20rpx;
    opacity: 1;
    padding: 20rpx 20rpx;
    border-top: 1rpx solid rgb(255, 218, 218);
    border-bottom: 1rpx solid rgb(255, 218, 218);
}

.textarea_view textarea{
    font-size: 27rpx;
    width: 670rpx;
    height: 450rpx;
    color: rgb(245, 99, 116);
}

.textarea_view .number {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    color: rgb(231, 97, 112);
    font-size: 27rpx;
}

.textarea_view .icon-niming{
    position: absolute;
    bottom: 20rpx;
    left: 10rpx;
    font-size: 40rpx;
}

.top_view{
    display: flex;
    margin-top: 30rpx;
}

.uploadImage {
    width: 180rpx;
    height: 260rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
    border: 3rpx dashed rgb(138, 138, 138);
    margin-left: 20rpx;
    color: rgb(200, 200, 200);
}

.uploadImage .icon-xiangji {
    font-size: 80rpx;
}

.images_box{
    height: 260rpx;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    /* border: 3rpx dashed rgb(138, 138, 138); */
    margin-left: 20rpx;
}

.image_view{
    width: 40rpx;
    height: 100%;
    position: relative;
}

.image_view image{
    width: 165rpx;
    height: 100%;
    box-shadow: 5rpx 5rpx 10rpx 5rpx rgb(150,150,150);
}

.icon-chacha{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    top: -20rpx;
    left: 150rpx;
    color: rgb(138, 138, 138);
}

.buttons .save {
    background-color: rgb(255, 191, 191);
}

.buttons .publish {
    background-color: rgb(255, 145, 145);
}