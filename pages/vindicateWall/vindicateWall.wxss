.text_content {
  font-size: 27rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  display: flex;
  width: 98%;
}

.text_content text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}

.images_content {
  display: flex;
  flex-wrap: wrap;
}

/* 1张图片的样式 */
.image_content1 {
  height: 380rpx;
}

/* 2~4张图片的样式 */
.image_content2 {
  width: 350rpx;
  height: 300rpx;
  margin-right: 10rpx;
}

/* 5~9张图片的样式 */
.image_content3 {
  width: 230rpx;
  height: 210rpx;
  margin-right: 10rpx;
}

.number_view {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 1rpx solid rgb(244, 244, 244); */
  position: relative;
}

.number_view .number {
  font-size: 24rpx;
  color: rgb(200, 200, 200);
}

.number_view .icons_view {
  margin-left: 220rpx;
  display: flex;
  position: absolute;
  right: 20rpx;
}

.number_view .icons_view view {
  font-size: 45rpx;
  color: rgb(167, 167, 167);
  margin-left: 15rpx;
}

.comments_view {
  margin-bottom: 5rpx;
  font-size: 27rpx;
}

.comment_name {
  font-weight: bold;
}

.input_view {
  margin-top: 15rpx;
  width: 94vw;
  height: 60rpx;
  background-color: rgb(240, 240, 240);
  /* border-radius: 30rpx; */
  display: flex;
  align-items: center;
}

.input_view view {
  font-size: 27rpx;
  margin-left: 30rpx;
  color: rgb(170, 153, 141);
}

.masklayer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000;
}

.sent_view {
  position: fixed;
  /* bottom: 48px; */
  /* height: 100rpx; */
  width: 100vw;
  display: flex;
  background-color: white;
  border-top: 1rpx solid rgb(240, 240, 240);
  z-index: 2000;
  align-items: center;
  padding: 10rpx 0;
}

.commentInput_view {
  background-color: rgb(240, 240, 240);
  width: 78%;
  margin-left: 20rpx;
  font-size: 27rpx;
  border-radius: 5rpx;
  padding: 14rpx 10rpx;
}

.commentInput {
  width: 100%;
}

.sentComment {
  font-size: 27rpx;
  background-color: rgb(255, 145, 145);
  text-align: center;
  height: 65rpx;
  width: 100rpx;
  margin-left: 15rpx;
  color: white;
  line-height: 65rpx;
  border-radius: 5rpx;
}

.click_view {
  background-color: rgb(230, 230, 230);
}