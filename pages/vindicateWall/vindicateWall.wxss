.toTop {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 20rpx;
  top: 200rpx;
  background-color: #cbcbcb;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  box-shadow: 0 0 3rpx 3rpx #cbcbcb;
}

.toTop text {
  font-size: 36rpx;
  color: white;
}

.first_tab {
  padding: 20rpx 0rpx 20rpx 20rpx;
  border-top: 20rpx solid rgb(240, 240, 240);
  background: linear-gradient(to bottom, rgb(255, 255, 255), rgb(255, 243, 243));
}

.head_view {
  display: flex;
  flex-direction: row;
  position: relative;
  margin-bottom: 20rpx;
}

.head_view .userAvatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
}

.text_view .userName {
  margin-top: 5rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.text_view .publish_time {
  font-size: 24rpx;
  color: rgb(200, 200, 200);
  position: absolute;
  bottom: 0;
}

.level {
  color: white;
  font-size: 28rpx;
  margin-top: 5rpx;
  margin-left: 20rpx;
  font-weight: 700;
  font-style: italic;
  text-shadow: 0 0 5rpx rgb(255, 196, 0), 0 0 10rpx rgb(255, 196, 0), 0 0 15rpx rgb(255, 196, 0);
}

