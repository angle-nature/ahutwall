.blank_view{
    width: 100%;
}

.catbar {
    width: 100%;
    background-color: white;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1000;
    /* border-bottom: 4rpx solid #fffdef; */
}

.categories {
    height: 100%;
    white-space: nowrap;
    box-sizing: border-box;
    border-bottom: 2rpx solid #ffffff;
    -webkit-overflow-scrolling: touch;
}

.category {
    display: inline-block;
    box-sizing: border-box;
    height: 100%;
}

.category:first-child {
    padding-left: 20rpx;
}

.category-name {
    display: inline-block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    font-size: 27rpx;
    line-height: 80rpx;
    color: #353535;
}

.current-category {
    color: #a18c4c;
    border-bottom: 6rpx solid #a18c4c;
}